# =============================================================================
# E-commerce FastAPI REST API - Development Environment Configuration
# =============================================================================
# Copy this file to .env for local development
# For production, use .env.production.example as template
#
# IMPORTANT: Never commit .env files to version control
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# =============================================================================
# DATABASE CONNECTION POOL (Development Settings)
# =============================================================================
# Lower values for development (single user, less load)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=10
DB_POOL_RECYCLE=3600

# =============================================================================
# REDIS CACHE CONFIGURATION
# =============================================================================
# Redis server connection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Redis connection pool
REDIS_MAX_CONNECTIONS=10

# Enable/disable caching (set to 'false' to disable)
REDIS_ENABLED=true

# Default cache TTL in seconds (300 = 5 minutes)
REDIS_CACHE_TTL=300

# =============================================================================
# RATE LIMITING
# =============================================================================
# Enable/disable rate limiting
RATE_LIMIT_ENABLED=true

# Maximum requests per time window per IP address
RATE_LIMIT_CALLS=100

# Time window in seconds
RATE_LIMIT_PERIOD=60

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Server host and port
API_HOST=0.0.0.0
API_PORT=8000

# Number of Uvicorn worker processes (1 for development)
UVICORN_WORKERS=1

# Hot reload on code changes (ONLY for development!)
RELOAD=false

# =============================================================================
# LOGGING
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=DEBUG

# Enable access logs
ACCESS_LOG=true

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed origins (comma separated)
# Use "*" for development to allow all origins
# For production, specify exact origins: https://example.com,https://app.example.com
CORS_ORIGINS=*

# =============================================================================
# PYTHON OPTIMIZATIONS
# =============================================================================
# Disable Python bytecode (.pyc) generation
PYTHONDONTWRITEBYTECODE=1

# Force unbuffered output (logs appear immediately)
PYTHONUNBUFFERED=1

# =============================================================================
# NOTES FOR DEVELOPMENT
# =============================================================================
# 1. Use docker-compose up to start all services (PostgreSQL, Redis, API)
# 2. Redis is required for rate limiting and caching
# 3. Database tables are created automatically on first run
# 4. API documentation available at http://localhost:8000/docs
# 5. Health check endpoint: http://localhost:8000/health_check
#
# For production deployment, see .env.production.example
# =============================================================================